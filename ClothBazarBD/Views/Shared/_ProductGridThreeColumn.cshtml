
<div class="product-content product-threecolumn product-slidebar clearfix">
    <ul class="product style2  clearfix">

        @foreach (Product product in Model)
        {
            <li class="product-item kid woman">
                <div class="product-thumb clearfix">
                    <a href="#" class="product-thumb">
                        <img src="~/images/products/@product.ImageURL" alt="image">
                    </a>
                    <span class="new">New</span>
                </div>
                <div class="product-info clearfix mt-2">
                    <span class="product-title ">@product.Name</span>
                    <div class="price">
                        <ins>
                            <span class="amount">$@product.Price</span>
                        </ins>
                    </div>
                </div>
                <div class="add-to-cart text-center" item-id="@product.ID">
                    <a href="#">ADD TO CART</a>
                </div>
                <a href="#" class="like"><i class="fa fa-heart-o"></i></a>
            </li>
        }
    </ul>
</div>

<script>

    var cartProducts = [];

    $(".add-to-cart").click(function (event) {

        event.preventDefault();

     
        if ($.cookie('cartProducts') != null) {
            cartProducts = $.cookie('cartProducts').split(",");
        }
       
        
        var productID = $(this).attr("item-id");

        cartProducts.push(productID);
        $.cookie('cartProducts', cartProducts, { path: '/' });

        updateCartProducts();
        console.log($.cookie('cartProducts'));


    });

</script>

